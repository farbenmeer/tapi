{
  "name": "@farbenmeer/bunny",
  "version": "0.1.4",
  "author": {
    "name": "Michel Smola",
    "email": "michel.smola@farbenmeer.de"
  },
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "private": false,
  "license": "MIT",
  "files": [
    "dist",
    "boilerplate"
  ],
  "bin": {
    "bunny": "./dist/cli.js",
    "@farbenmeer/bunny": "./dist/cli.js"
  },
  "exports": {
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./node-http-adapter": {
      "types": "./dist/node-http-adapter.d.ts",
      "default": "./dist/node-http-adapter.js"
    }
  },
  "scripts": {
    "build": "tsc --noEmit false",
    "pack:boilerplate": "bun --cwd=\"../4-bunny-boilerplate\" pm pack --filename=\"packages/3-bunny/boilerplate.tar.gz\"",
    "cli": "node dist/cli.js",
    "release": "pnpm run build && pnpm run pack:boilerplate && pnpm publish",
    "postinstall": "mkdir dist && touch dist/cli.js"
  },
  "dependencies": {
    "@farbenmeer/react-tapi": "workspace:^",
    "@farbenmeer/router": "workspace:^",
    "@farbenmeer/tapi": "workspace:^",
    "commander": "^14.0.0",
    "connect": "^3.7.0",
    "esbuild": "^0.27.2",
    "serve-static": "^2.2.1",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3"
  },
  "devDependencies": {
    "@types/connect": "^3.4.38",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19",
    "@types/serve-static": "^2.2.0",
    "react": "^19.2.3",
    "react-dom": "^19"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19",
    "typescript": "^5"
  }
}
